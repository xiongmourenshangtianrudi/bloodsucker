shader_type canvas_item;
uniform float lerp_persent:hint_range(0.0, 1.0);

void fragment() {
	vec4 texture_color = texture(TEXTURE,UV);
	vec4 final_color = mix(texture_color,vec4(1.0,1.0,1.0,texture_color.a),lerp_persent);//混合函数，表示颜色1到颜色2的过度
	COLOR = final_color;
}

